# Library extension

LIB-SUFFIX=-ifc64
SL=$(LIB-SUFFIX).a

# X library path

XINCPATH=/usr/X11/include
XLIBPATH=/usr/X11/lib
XLIBS=$(XLIBPATH)/libX11$(SL)

# Libraries for C mathematical functions in Fortran compile

MLIBS=

